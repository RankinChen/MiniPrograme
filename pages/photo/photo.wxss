/* pages/photo/photo.wxss */

.imgWrap {
  width: 100%;
  height: 100%;
  position: relative;
}

.imgBg {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.title {
  display: block;
  width: 100%;
  height: auto;
  padding: 10px;
  font-size: 18px;
  max-height: 90px;
  overflow: auto;
}

.skip {
  width: 100%;
  height: 20px;
  padding: 10px;
  text-align: center;
  color: red;
  position: absolute;
  bottom: 0;
}

.shishi0 {
  animation: zoomInUp 2s infinite;
}

image {
  display: block;
  margin: 10px auto;
  width: 80%;
  height: 80%;
  border-radius: 5px;
}
