/* pages/index/index.wxss */
.heard_banner {
  width: 100%;
  height: 160px;
}

.center {
  padding: 15px;
}

van-card {
  z-index: 1;
}

.van-card {
  z-index: 1;
  border-radius: 5px;
  height: 140px;
  width: 100%;
  margin-bottom: 20px;
  box-shadow: 5px 5px 5px #EEF1F6,
                5px -5px 5px #EEF1F6,
                -5px 5px 5px #EEF1F6,
                -5px -5px 5px #EEF1F6;
  padding: 20px 40px !important;
}

.van-card__thumb {
  margin-right: 30px !important;
  width: 100px !important;
  height: 100px !important;
}

.van-card__title {
  font-size: 20px;
  color: #444445;
  font-weight: bold;
  margin-top: 30px;
}

.van-card__desc {
  font-size: 12px;
  color: #7b7b7b;
  margin-top: 5px;
}

.center_go {
  position: absolute;
  z-index: 2;
  margin-top: 57px;
  right: 50px;
}

.van-icon {
  color: #e4e4e4;
  font-size: 26px !important;
}
